{
  "name": "email-api-service",
  "version": "1.0.0",
  "description": "Servicio de correos electr√≥nicos con Express y SendGrid",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "deploy": "npm run build && npm start",
    "deploy:prod": "npm run build && pm2 start ecosystem.config.js --env production",
    "deploy:dev": "npm run build && pm2 start ecosystem.config.js --env development",
    "stop": "pm2 stop email-api-service",
    "restart": "pm2 restart email-api-service",
    "logs": "pm2 logs email-api-service",
    "docker:build": "docker build -t email-api-service .",
    "docker:run": "docker run -d --name email-api-service --restart unless-stopped -p 3000:3000 email-api-service",
    "docker:stop": "docker stop email-api-service && docker rm email-api-service"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.8",
    "@types/morgan": "^1.9.10",
    "@types/node": "^18.19.118",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "private": true
}
